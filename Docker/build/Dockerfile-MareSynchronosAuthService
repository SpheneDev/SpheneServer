FROM mcr.microsoft.com/dotnet/sdk:9.0 as BUILD

COPY SpheneAPI /SpheneAPI
COPY server/MareSynchronosServer/MareSynchronosShared /server/MareSynchronosServer/MareSynchronosShared
COPY server/MareSynchronosServer/MareSynchronosAuthService /server/MareSynchronosServer/MareSynchronosAuthService

# Build SpheneAPI first
WORKDIR /SpheneAPI/SpheneAPI
RUN dotnet build \
        --configuration=Release \
        --output=/SpheneAPI/bin \
        Sphene.API.csproj

WORKDIR /server/MareSynchronosServer/MareSynchronosAuthService/

RUN dotnet publish \
        --configuration=Debug \
        --os=linux \
        --output=/build \
        MareSynchronosAuthService.csproj

FROM mcr.microsoft.com/dotnet/aspnet:9.0

RUN adduser \
        --disabled-password \
        --group \
        --no-create-home \
        --quiet \
        --system \
        mare

COPY --from=BUILD /build /opt/MareSynchronosAuthService
RUN chown -R mare:mare /opt/MareSynchronosAuthService
RUN apt-get update; apt-get install curl -y

USER mare:mare
WORKDIR /opt/MareSynchronosAuthService

CMD ["./MareSynchronosAuthService"]
