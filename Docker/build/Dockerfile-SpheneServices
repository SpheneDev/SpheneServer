FROM mcr.microsoft.com/dotnet/sdk:10.0 AS BUILD

COPY SpheneAPI /SpheneAPI
COPY server/SpheneServer/SpheneShared /server/SpheneServer/SpheneShared
COPY server/SpheneServer/SpheneServices /server/SpheneServer/SpheneServices

# Build SpheneAPI
WORKDIR /SpheneAPI/SpheneAPI
RUN dotnet build \
    -c Release \
    -o /SpheneAPI/bin \
    Sphene.API.csproj

WORKDIR /server/SpheneServer/SpheneServices

RUN dotnet publish \
    -c Release \
    -r linux-x64 \
    --self-contained false \
    -o /build \
    SpheneServices.csproj

FROM mcr.microsoft.com/dotnet/aspnet:10.0
WORKDIR /opt/SpheneServices
COPY --from=BUILD /build .

USER app

ENTRYPOINT ["dotnet", "SpheneServices.dll"]
